#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/runtime:6.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["services/NewLake.GrpcReceive.Service/NewLake.GrpcReceive.Service.csproj", "services/NewLake.GrpcReceive.Service/"]
RUN dotnet restore "services/NewLake.GrpcReceive.Service/NewLake.GrpcReceive.Service.csproj"
COPY . .
WORKDIR "/src/services/NewLake.GrpcReceive.Service"
RUN dotnet build "NewLake.GrpcReceive.Service.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "NewLake.GrpcReceive.Service.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "NewLake.GrpcReceive.Service.dll"]